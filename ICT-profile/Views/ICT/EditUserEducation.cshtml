@model EducationUpdateVM;

<form asp-controller="ICT" asp-action="EditUserEducaion" method="post">

    <div class="form-control" style="width:50%; height:32rem; border:solid; margin-left:auto; margin-right:auto;">

        <h4 class="mb-3 mt-3">Edit your education</h4>

        <input type="hidden" asp-for="Id" />

        <div class="form-group mb-2">
            <label asp-for="UniverstyName">Universty name</label>
            <input asp-for="UniverstyName" class="form-control" />
            <span class="text-danger" asp-validation-for="UniverstyName"></span>
        </div>
        <div class="form-group mb-2">
            <label asp-for="FacultyName">Faculty name</label>
            <input asp-for="FacultyName" class="form-control" />
            <span class="text-danger" asp-validation-for="FacultyName"></span>
        </div>
        <div class="form-group mb-2">
            <label asp-for="UniverstyImage">Universty image</label>
            <input asp-for="UniverstyImage" class="form-control" />
            <span class="text-danger" asp-validation-for="UniverstyImage"></span>
        </div>
        <div class="form-group mb-2">
            <label asp-for="StartDate">Start date</label>
            <input asp-for="StartDate" class="form-control" type="date" />
            <span class="text-danger" asp-validation-for="StartDate"></span>
        </div>
        <div class="form-group mb-2">
            <label asp-for="EndDate">End date</label>
            <input asp-for="EndDate" class="form-control" type="date" />
            <span class="text-danger" asp-validation-for="EndDate"></span>
        </div>


        <div class="form-group mt-4 d-flex justify-content-end">
            <a class="btn btn-primary m-2" asp-action="Profile">Cancel</a>
            <button class="btn btn-success m-2">Submit</button>
        </div>
    </div>
</form>