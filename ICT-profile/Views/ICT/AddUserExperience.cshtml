@model WorkExperienceReadVM;

<form asp-controller="ICT" asp-action="AddUserExperience" method="post">

    <div class="form-control" style="width:50%; height:36rem; border:solid; margin-left:auto; margin-right:auto;">

        <h4 class="mb-3 mt-3">Add to your work experience</h4>

        <div class="form-group mb-2">
            <label asp-for="RoleName">Role name</label>
            <input asp-for="RoleName" class="form-control" />
            <span class="text-danger" asp-validation-for="RoleName"></span>
        </div>
        <div class="form-group mb-2">
            <label asp-for="Description"></label>
            <input asp-for="Description" class="form-control" />
            <span class="text-danger" asp-validation-for="Description"></span>
        </div>
        <div class="form-group mb-2">
            <label asp-for="CompanyName">Company name</label>
            <input asp-for="CompanyName" class="form-control" />
            <span class="text-danger" asp-validation-for="CompanyName"></span>
        </div>
        <div class="form-group mb-2">
            <label asp-for="CompanyImage"> Company image</label>
            <input asp-for="CompanyImage" class="form-control" />
            <span class="text-danger" asp-validation-for="CompanyImage"></span>
        </div>
        <div class="form-group mb-2">
            <label asp-for="StartDate">Start date</label>
            <input asp-for="StartDate" class="form-control" type="date" />
            <span class="text-danger" asp-validation-for="StartDate"></span>
        </div>
        <div class="form-group mb-2">
            <label asp-for="EndDate">End date</label>
            <input asp-for="EndDate" class="form-control" type="date" />
            <span class="text-danger" asp-validation-for="EndDate"></span>
        </div>
        

        <div class="form-group mt-4 d-flex justify-content-end">
            <a class="btn btn-primary m-2" asp-action="Profile">Cancel</a>
            <button class="btn btn-success m-2">Submit</button>
        </div>
    </div>
</form>