@model AboutUpdateVM;

<form asp-controller="ICT" asp-action="EditUserAbout" method="post">

    <div class="form-control" style="width:50%; height:28rem; border:solid; margin-left:auto; margin-right:auto;">

        <h4 class="mb-3 mt-3">Edit your About</h4>

        <input type="hidden" asp-for="UserId" />

        <div class="form-group mb-2">
            <label asp-for="AboutUser">About you</label>
            <textarea asp-for="AboutUser" class="form-control" style="height:15rem"></textarea>
            <span class="text-danger" asp-validation-for="AboutUser"></span>
        </div>

        <div class="form-group mt-4 d-flex justify-content-end">
            <a class="btn btn-primary m-2" asp-action="Profile">Cancel</a>
            <button class="btn btn-success m-2">Submit</button>
        </div>
    </div>
</form>