@model FullView


<div class="container">
    <div class="row">

        <div class="col-9">
            <div class="row">
                <div class="card mb-3">
                    <img class="card-img-top " src="/assets/bg.jpg" alt="Card image cap">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-2">
                                <img src="@Model.User.Image" style="border-radius: 5px; height:12rem; width:9rem; position:absolute; margin-top:-4rem" />
                            </div>
                            <div class="col-10">
                                <div class="row">
                                    <div class="col-11">
                                        <h4>@Model.User.FirstName @Model.User.LastName <i class="fa fa-check-circle-o" style="color:green"></i></h4>
                                        <h6>@Model.User.JobTitle</h6>
                                    </div>
                                    <div class="col-1">
                                        <a asp-controller="ICT" asp-action="EditUserInfo" asp-route-id="@Model.UserUpdateVM.Id" class="btn btn"><i class="fa fa-edit fa-2x"></i></a>
                                    </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card mt-5">
                    <div class="card-body">
                            <h5 class="card-title">About <a class="ms-3" asp-controller="ICT" asp-action="EditUserAbout" asp-route-id="@Model.AboutUpdateVM.Id"><i class="fa fa-edit"></i></a></h5>
                        <p class="mt-3">@Model.About.AboutUser</p>
                    </div>
                </div>

                <div class="card mt-1">
                    <div class="card-body">
                        <h5 class="card-title">Contacts <a class="ms-3" asp-controller="ICT" asp-action="Dashboard"><i class="fa fa-edit"></i></a></h5>
                        <h6 class="mt-3" style="color:blue">Email:</h6>
                        <p style="margin-top:-10px">@Model.Contact.Email</p>
                        <hr />
                        <h6 style="color:blue">Phone Number:</h6>
                        <p style="margin-top:-10px">@Model.Contact.PhoneNumber</p>
                        <hr />
                        <h6 style="color:blue">Address:</h6>
                        <p style="margin-top:-10px">@Model.Contact.Address</p>
                    </div>
                </div>

                <div class="card mt-1">
                    <div class="card-body">
                        <h5 class="card-title">Background <a class="ms-3" asp-controller="ICT" asp-action="Dashboard"><i class="fa fa-edit"></i></a></h5>
                        <h6 class="mt-3" style="color:blue">Work Experience:</h6>
                        @foreach (var ex in Model.WorkExperiences)
                        {
                            <div class="row">
                                <div class="col-1">
                                    <img src="@ex.CompanyImage" style="border-radius:50%; width:2.5rem">
                                </div>
                                <div class="col-11">
                                    <h6>@ex.RoleName</h6>
                                    <p>@ex.CompanyName ( @ex.StartDate.ToString("MMM yyyy") - @ex.EndDate.ToString("MMM yyyy"))</p>
                                </div>
                            </div>
                        }
                    </div>
                </div>

                <div class="card mt-1">
                    <div class="card-body">
                        <h6 class="mt-3" style="color:blue">Education:</h6>
                        @foreach (var edu in Model.Educations)
                        {
                            <div class="row">
                                <div class="col-1">
                                    <img src="@edu.UniverstyImage" style="border-radius:50%; width:2.5rem">
                                </div>
                                <div class="col-11">
                                    <h6>@edu.FacultyName</h6>
                                    <p>@edu.UniverstyName ( @edu.StartDate.ToString("MMM yyyy") - @edu.EndDate.ToString("MMM yyyy"))</p>
                                </div>
                            </div>
                        }
                    </div>
                </div>

                <div class="card mt-1">
                    <div class="card-body">
                        <h6 class="mt-3" style="color:blue">Licenses & Certificates:</h6>
                        @foreach (var lic in Model.Licenses)
                        {
                            <div class="row">
                                <h6>@lic.Name</h6>
                                <p>@lic.Description </p>
                            </div>
                        }
                    </div>
                </div>

                <div class="card mt-1">
                    <div class="card-body">
                        <h6 class="mt-3" style="color:blue">Other Experiences:</h6>
                        @foreach (var other in Model.OtherExperiencs)
                        {
                            <div class="row">
                                <h6>@other.Name</h6>
                                <p>@other.Description </p>
                            </div>
                        }
                    </div>
                </div>

                <div class="card mt-1">
                    <div class="card-body">
                        <h6 class="mt-3" style="color:blue">Skills:</h6>
                        @foreach (var sk in Model.Skills)
                        {
                            <div class="row">
                                <h6>@sk.Name</h6>
                            </div>
                        }
                    </div>
                </div>

                <div class="card mt-1">
